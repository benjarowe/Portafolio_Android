<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastel"
    android:orientation="vertical"
    tools:context=".Ciudades">

    <TextView
        android:id="@+id/grados"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="118dp"
        android:gravity="center"
        android:text="@string/grados"
        android:textColor="@color/negro"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/nublado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grados"
        android:layout_alignStart="@+id/grados"
        android:layout_alignEnd="@+id/grados"
        android:layout_marginTop="58dp"
        android:gravity="center"
        android:text="@string/nublado"
        android:textColor="@color/negro"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/ciudad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nublado"
        android:gravity="center"
        android:text="@string/ciudad"
        android:textColor="@color/negro"
        android:textSize="30sp" />

</RelativeLayout>