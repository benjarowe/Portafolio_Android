<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Vista para la imagen de fondo en vertical -->
    <ImageView
        android:id="@+id/imageViewVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondo_de_pantalla__escandalosos_"
        android:scaleType="centerCrop" />
    <!--horizontal-->
    <ImageView
        android:id="@+id/imageViewHorizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/cortado_fondo_de_pantal"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvTiempoRestante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_centerInParent="true"/>

</RelativeLayout>
